@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="favicon.ico" />
    <title>Montefiore 13</title>
    <link rel="stylesheet" href="~/Content/themes/Bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/themes/theme.css" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            <a class="navbar-brand" href="/">Montefiore 13</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/Administration">Admin</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row" style="height: 65px;"></div>

    <div id="root" class="container">
        
        <!-- Apaertments -->
        <div class="panel panel-default">
            <div class="panel-heading">Apertment</div>
            <div class="panel-body">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default" id="apb1">5</button>
                        <button type="button" class="btn btn-default" id="apb2">6</button>
                        <button type="button" class="btn btn-default" id="apb3">7</button>
                        <button type="button" class="btn btn-default" id="apb4">8</button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default" id="apb5">9</button>
                        <button type="button" class="btn btn-default" id="apb6">10</button>
                        <button type="button" class="btn btn-default" id="apb7">11</button>
                        <button type="button" class="btn btn-default" id="apb8">12</button>
                        <button type="button" class="btn btn-default" id="apb9">13</button>
                        <button type="button" class="btn btn-default" id="apb10">14</button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default" id="apb11">15</button>
                        <button type="button" class="btn btn-default" id="apb12">16</button>
                        <button type="button" class="btn btn-default" id="apb13">17</button>
                        <button type="button" class="btn btn-default" id="apb14">18</button>
                        <button type="button" class="btn btn-default" id="apb15">19</button>
                        <button type="button" class="btn btn-default" id="apb16">20</button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default" id="apb17">21</button>
                        <button type="button" class="btn btn-default" id="apb18">22</button>
                        <button type="button" class="btn btn-default" id="apb19">23</button>
                        <button type="button" class="btn btn-default" id="apb20">24</button>
                        <button type="button" class="btn btn-default" id="apb21">25</button>
                        <button type="button" class="btn btn-default" id="apb22">26</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Password -->
        <div class="panel panel-default">
            <div class="input-group">
                <span class="input-group-addon">Password</span>
                <input type="password" class="form-control" placeholder="Make sure you use english" id="password"/>
                <div>
                    <img src="/Content/themes/301.gif" id="loginGif" style="display: none; position: absolute; top:10%; left:101%;"/>
                </div>
                <span class="input-group-btn">
                    <button class="btn btn-info" type="button" id="login"><span class="glyphicon glyphicon-share-alt"></span> Login</button>
                </span>
            </div>
        </div>

        <!-- Actions -->
        <div class="container" id="actions" style="display: none; padding-bottom: 20px">
            <div class="row">

                <div class="col-md-6">
                    <div class="btn-group-vertical">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" id="washDuration">
                                Choose duration <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#" id="wash30">30 Minutes</a></li>
                                <li><a href="#" id="wash60">60 Minutes</a></li>
                                <li><a href="#" id="wash90">90 Minutes</a></li>
                                <li><a href="#" id="wash120">120 Minutes</a></li>
                                <li><a href="#" id="wash150">150 Minutes</a></li>
                                <li><a href="#" id="wash180">180 Minutes</a></li>
                                <li><a href="#" id="wash210">210 Minutes</a></li>
                            </ul>
                        </div>
                        <button id="washButton" type="button" class="btn btn-info" data-toggle="modal" disabled="disabled" href="#myWashModal"><span class="glyphicon glyphicon-fire"></span> Order washing machine</button> <!--  style="position: relative; left: 30%"><span class="glyphicon glyphicon-fire" -->
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="btn-group-vertical">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" id="dryDuration">
                                Choose duration <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#" id="dry30">30 Minutes</a></li>
                                <li><a href="#" id="dry60">60 Minutes</a></li>
                                <li><a href="#" id="dry90">90 Minutes</a></li>
                                <li><a href="#" id="dry120">120 Minutes</a></li>
                                <li><a href="#" id="dry150">150 Minutes</a></li>
                                <li><a href="#" id="dry180">180 Minutes</a></li>
                                <li><a href="#" id="dry210">210 Minutes</a></li>
                            </ul>
                        </div>
                        <button id="dryButton" type="button" class="btn btn-info" data-toggle="modal" disabled="disabled" href="#myDryModal"><span class="glyphicon glyphicon-retweet"></span> Order drying machine</button> <!--  style="position: relative; left: 30%"><span class="glyphicon glyphicon-fire" -->
                    </div>
                </div>
            </div>
        </div>

        <!-- History -->
        <div class="panel panel-default" id="history" style="display: none">
            <div class="panel-heading">History</div>
            <img src="/Content/themes/301.gif" id="historyGif" style="position: relative; top:10%; left:45%;"/>
        </div>


<!-- Modal -->
<div class="modal fade" id="myWashModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Confirm action</h4>
            </div>
            <div id="washModalBody" class="modal-body">
                Washing machine for the next XXX TODO
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" data-dismiss="modal" id="confirmWash">Confirm</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- Modal -->
<div class="modal fade" id="myDryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Confirm action</h4>
            </div>
            <div id="dryModalBody" class="modal-body">
                Drying machine for the next XXX TODO
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" data-dismiss="modal" id="confirmDry">Confirm</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

    </div>

    <script src="~/Scripts/jQuery/jquery-2.0.3.js"></script>
    <script src="~/Scripts/Bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/m13.js"></script>
</body>
</html>
